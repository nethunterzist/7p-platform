       511 +    static async createEnhancedUserSession(
       512 +      userId: string,
       513 +      sessionId: string,
       514 +      request: NextRequest,
       515 +      options: {
       516 +        mfaVerified?: boolean;
       517 +        deviceTrusted?: boolean;
       518 +        geolocation?: any;
       519 +      } = {}
       520 +    ): Promise<void> {
